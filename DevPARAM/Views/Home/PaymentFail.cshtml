
@{
    Layout = null;
}

<meta name="viewport" content="width=device-width" />
<title>Payment Failed!</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css" />

<style type="text/css">
    html, body {
        height: 100vh;
        width: 100vw;
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; overflow: hidden;">
    <div class="row text-center d-flex align-items-center" style="width: 50vw; height: 50vh; background-color: #480c84; border-radius: 100px;">
        <img src="/cancel.png" style="width: 35%; margin-top: -220px;" class="mx-auto" />
        <h1 class="text-white" style="margin-top: -100px;">Receive Payment Has Failed!</h1>
        <div class="text-white" style="margin-top: -250px;">
            <h5>close window automatically after <span class="time"></span> seconds</h5>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.min.js"></script>
<script>
    $(function () {
        countdown();
    });

    function countdown() {
        var time = 5;
        $('.time').text(time);
        setInterval(function () {
            time--;
            if (time >= 0) {
                $('.time').text(time);
            }
            if (time == 0) {
                window.close();
            }
        }, 1000);
    }
</script>