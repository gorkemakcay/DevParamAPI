                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                        <select id="selectCreditCard" class="form-control" style="border-radius: 25px;">
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    </div>
                </div>
            </div>

            <div class="card-body" style="display: block; padding-left: 0px; padding-right: 0px; padding-left: 20px; font-weight: 700;">

                <div class="row mb-3">
                    <div class="col-3 text-white">Ödeme</div>

                    <div class="col-3">
                        <input type="button" class="creditCardTestButtons" value="3D Pay" onclick="test('payment', '3DPay');" />
