                    <div class="col-1" id="paymentLoadSpinnerArea">

                    </div>

                    <div class="col-5" style="padding-left: 0px; padding-right: 50px;">
                        <span id="paymentErrorArea" class="text-white" style="font-weight: 300;"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-3 text-white">Ön Provizyon</div>

                    <div class="col-3">
                        <input type="button" class="creditCardTestButtons" value="3D" onclick="test('preProvision', '3D');" style="background-color: gray !important" disabled />
                        <input type="button" class="creditCardTestButtons" value="NS" onclick="test('preProvision', 'NS');" />
